<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Brand</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>

  <div class="container">
    <h2>Edit Artist Page</h2>
    <br>
    <form name="form" action="<%= artists.id %>" method="post" onsubmit="return cekForm()">
      <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" name="name" id="cname" value="<%= artists.name %>" class="form-control">
      </div>
      <div class="mb-3">
        <label for="" class="form-label">Genre</label>
        <input type="text" name="genre" id="cgenre" value="<%= artists.genre %>" class="form-control">
      </div>
      <div class="mb-3">
        <label for="" class="form-label">Link Image</label>
        <input type="text" name="image" id="cimage" value="<%= artists.image %>" class="form-control">
      </div>
    
    

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <script>
    function cekForm() {
      const nama = document.forms["form"]["cname"].value;
      const image = document.forms["form"]["cimage"].value;
      const genre = document.forms["form"]["cgenre"].value;


      if (nama == "" || image == "" || genre == "" ) {
        alert("Please insert all column");
        return false;
      } else {
        alert("update success")
      }
    }
  </script>
</body>

</html>